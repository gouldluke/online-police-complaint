    //-         option(value="traffic-unit") Traffic Unit
    //-         option(value="bike-patrol") Bike Patrol

h3 Your Contact Information
form(name='contactInformation')
    div(flex-row)
        label Name
        input(
            type='text'
            ng-model='formData.complaintantName'
            name='complaintantName'
        )
        
    div(flex-row)
        label Email Address        
        input(
            type='email'
            ng-model='formData.complaintantEmailAddress'
            name='complaintantEmailAddress'
        )
        
    div(flex-row)
        label Phone Number
        input(
            type='number'
            ng-model='formData.complaintantPhoneNumber'
            name='complaintantPhoneNumber'
        )

h3 Please Describe the Incident
form(name='incidentInformation')
    div(flex-row)
        label Date 
        input(
            type='date'
            ng-model='formData.incidentDate'
            name='incidentDate'
        )
    div(flex-row)
        label Time 
        input(
            type='time'
            ng-model='formData.incidentTime'
            name='incidentTime'
        )
        
        
    div(flex-row)
        label Location 
        input(
            type='text'
            ng-model='formData.incidentLocation'
            name='incidentLocation'
        )
        
    div(flex-row)
        label Description
        textarea(
            ng-model='formData.incidentDescription'
            name='incidentDescription'
            required
        )

button(ng-click='submitReport()') Submit
br
  
span {{ dataToSubmit }}
