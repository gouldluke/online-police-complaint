h1 Online Police Complaint 
h2 {{ myVar }}

h3 Police Personnel Involved
form(name='personnelInvolved')
    div(flex-row)
        label Name
        input(
            type='text'
            ng-model='formData.personnelName'
            name='name'
            required
        )
        
    div(flex-row)
        label Rank
        input(
            type='text'
            ng-model='formData.rank'
            name='rank'
        )
    
    div(flex-row)
        label Badge Number
        input(
            type='number'
            ng-model='formData.badgeNumber'
            name='badgeNumber'
        )
    
    //- div(flex-row)
